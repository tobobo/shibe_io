#!/usr/bin/env coffee

User = require '../models/user'
db = require '../config/db'
doge_api = require '../config/doge_api'
RSVP = require 'rsvp'

db.connect()

db.mongoose.connection.on 'open', ->
  console.log "connection open"

  User.find (err, users) ->
    console.log "users found"
    totalUsers = users.length
    usersChecked = 0

    exitIfDone = ->
      if ++usersChecked == totalUsers
        process.exit(1)

    if users.length == 0
      process.exit(1)

    users.forEach (user) -> 
      console.log 'updating balance for', user.email
      user.checkDeposits().then (deposited) ->
        console.log "#{user.email} deposited #{deposited}"
        exitIfDone()
      , (error) ->
        exitIfDone()
